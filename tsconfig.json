{
    "compilerOptions": {
        "baseUrl": "src",
        "module": "commonjs",
        "target": "es5",
        "noEmitOnError": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "watch": true
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}